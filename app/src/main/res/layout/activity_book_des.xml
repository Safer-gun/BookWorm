<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookDesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bookdescover"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:src="@drawable/book_1" />
        <TextView
            android:id="@+id/title1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="书名:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/bookdescover"/>
        <TextView
            android:id="@+id/bookdestitle"
            android:text="龙族"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/title1"/>
        <TextView
            android:id="@+id/author1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="作者:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/bookdescover"
            android:layout_below="@id/title1"/>
        <TextView
            android:id="@+id/bookdesauthor"
            android:text="不详"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/author1"
            android:layout_below="@id/title1"/>
        <TextView
            android:id="@+id/jianjie"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="介绍:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/bookdescover"
            android:layout_below="@id/author1"/>
        <TextView
            android:id="@+id/bookdesjianjie"
            android:text="暂无简介"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/jianjie"
            android:layout_below="@id/author1"/>
        <TextView
            android:id="@+id/isbn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="ISBN:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/bookdescover"
            android:layout_below="@id/jianjie"/>
        <TextView
            android:id="@+id/bookdesisbn"
            android:text="无"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/isbn"
            android:layout_below="@id/jianjie"/>

    </RelativeLayout>
</LinearLayout>